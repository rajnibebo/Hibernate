<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">rajni</property>
        <property name="hibernate.connection.url">jdbc:postgresql:emp_hib</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.rajni.ems.entities.Address"/>
        <mapping class="com.rajni.ems.entities.company.Company"/>
       	<mapping class="com.rajni.ems.entities.company.CompanyUnit"/>
        <mapping class="com.rajni.ems.entities.employee.Employee"/>
        <mapping class="com.rajni.ems.entities.employee.PersonalDetails"/>
    </session-factory>
</hibernate-configuration>
